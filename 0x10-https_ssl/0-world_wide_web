#!/usr/bin/env bash
# This script displays information about subdomains of a domain.

# Function to get DNS information for a subdomain
get_dns_info() {
    local domain="$1"
    local subdomain="$2"
    dig_output=$(dig "$subdomain.$domain" +short)
    record_type=$(echo "$dig_output" | awk 'NR==1 {print $4}')
    destination=$(echo "$dig_output" | awk 'NR==2')
    echo "The subdomain $subdomain is a $record_type record and points to $destination"
}

# Main function
main() {
    local domain="$1"
    local subdomain="$2"

    if [ -z "$subdomain" ]; then
        subdomains=("www" "lb-01" "web-01" "web-02")
        for sub in "${subdomains[@]}"; do
            get_dns_info "$domain" "$sub"
        done
    else
        get_dns_info "$domain" "$subdomain"
    fi
}

# Check if domain and subdomain parameters are provided
if [ $# -lt 1 ]; then
    echo "Usage: $0 <domain> [<subdomain>]"
    exit 1
fi

# Call the main function with provided arguments
main "$@"
