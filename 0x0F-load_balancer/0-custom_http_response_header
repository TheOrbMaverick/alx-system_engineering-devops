#!/usr/bin/env bash
# Script to configure Nginx with custom HTTP response header

# Function to install Nginx and configure custom HTTP response header
configure_nginx() {
    # Install Nginx
    sudo apt update
    sudo apt install nginx -y

    # Configure custom HTTP response header
    sudo sh -c 'echo "add_header X-Served-By \$hostname;" >> /etc/nginx/nginx.conf'

    # Restart Nginx to apply changes
    sudo systemctl restart nginx
}

# Main script
main() {
    configure_nginx
}

# Execute main function
main
