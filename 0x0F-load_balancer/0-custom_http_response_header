#!/usr/bin/env bash
# Script to configure Nginx with custom HTTP response header

hostname=$(hostname)
header="add_header X-Served-By $(hostname);"
config_file="/etc/nginx/sites-available/itaenang.tech"

# Append the header to the Nginx configuration file
echo "$header" | sudo tee -a "$config_file" > /dev/null

# Disable SC2154 Shellcheck warning
# shellcheck disable=SC2154
