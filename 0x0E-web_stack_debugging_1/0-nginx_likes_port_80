#!/usr/bin/env bash
# Script to configure Nginx with a custom HTTP response header

# Define the Nginx configuration file
NGINX_CONF="/etc/nginx/nginx.conf"

# Check if Nginx is installed
if ! command -v nginx &> /dev/null; then
    echo "Nginx is not installed. Please install Nginx first." >&2
    exit 1
fi

# Check if Nginx is already listening on port 80
if grep -q "listen 80;" "$NGINX_CONF"; then
    echo "Nginx is already configured to listen on port 80."
    exit 0
fi

# Add configuration to listen on port 80 for all active IPv4 IPs
sed -i "/http {/a \        server { listen 80; }" "$NGINX_CONF"

# Restart Nginx to apply the changes
systemctl restart nginx